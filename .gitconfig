[user]
    email = pflouret@gmail.com
    name = Pablo Flouret

[alias]
    #amend = !git log -n 1 --pretty=format:%B | git commit --amend -F -
    amend = commit --amend -C HEAD
    b = branch
    ba = branch -a
    bb = !git branch|grep '^\\*'|sed 's/^\\* //'
    ci = commit
    co = checkout
    cp = cherry-pick
    diffw = diff --color-words
    diffs = diff --stat
    diffc = diff --cached
    l = log --format='%Cblue%h%Creset %an %Cgreen%ar:%Creset %s' -10
    ll = log --format='%Cblue%h%Creset %an %Cgreen%ar:%Creset %s'
    lf = log --pretty=medium --stat
    l1 = log --pretty=oneline
    ls = ls-files -v .
    gitkf = !gitk master..origin &
    r = remote -v
    st = status
    stp = !git -p status
    unmerged = ls-files -u
    mt = mergetool
    last-commit-message = !git log -n 1 --pretty=format:%B|tee `git rev-parse --show-toplevel`/.git/MERGE_MSG
    copy-last-commit-message = !git log -n 1 --pretty=format:%B|pbcopy
    reset-last = !git copy-last-commit-message && git reset HEAD^ && pbpaste > `git rev-parse --show-toplevel`/.git/MERGE_MSG

[branch]
    autosetupmerge = true

[color]
    diff = auto
    status = auto
    branch = auto
    log = auto

[core]
    excludesfile = ~/.gitignoreglobal

[merge]
    tool = vim
    log = true

[mergetool "vim"]
    cmd = "vim $MERGED"
    trustExitCode = true

#[merge "changelog"]
#	driver = perl Tools/Scripts/resolve-ChangeLogs --fix-merged --merge-driver %O %A %B

[mergetool]
    keepBackup = false

[push]
    default = tracking

[gc]
	auto = 0

[git-p4]
	attemptRCSCleanup = true
