[user]
    email = quuxbaz@gmail.com
    name = Pablo Flouret

[alias]
    amend = !git log -n 1 --pretty=format:%B | git commit --amend -F -
    b = branch
    ba = branch -a
    bb = !git branch|grep '^\\*'|sed 's/^\\* //'
    ci = commit
    co = checkout
    d = diff
    ds = diff --stat
    dc = diff --cached
    diffc = diff --cached
    log1 = log --pretty=oneline
    logg = log --pretty=format:'%Cblue%h%Creset %an <%ae> %Cgreen%ar:%Creset %s'
    qlog = log --pretty=format:'%Cgreen%h%Creset %an %Cblue%ar:%Creset %s' -10
    logs = log --pretty=short
    ls = ls-files -v .
    gitkf = !gitk master..origin &
    r = remote -v
    st = status
    stp = !git -p status
    unmerged = ls-files -u

[branch]
    autosetupmerge = true

[color]
    diff = auto
    status = auto
    branch = auto
    log = auto

[core]
    excludesfile = ~/.gitignoreglobal

[merge]
    tool = vimdiff
    log = true

[mergetool]
    keepBackup = false

[push]
    default = tracking
