[user]
  email = quuxbaz@gmail.com
  name = pablo flouret

[alias]
  branches = branch -a
  ci = commit
  co = checkout
  diffc = diff --cached
  log1 = log --pretty=oneline
  logg = log --pretty=format:'%Cblue%h%Creset %an <%ae> %Cgreen%ar:%Creset %s'
  qlog = log --pretty=format:'%Cgreen%h%Creset %an %Cblue%ar:%Creset %s' -10
  logs = log --pretty=short
  gitkf = !gitk master..origin &
  st = status
  stp = !git -p status
  unmerged = ls-files -u

[branch]
  autosetupmerge = true

[color]
  diff = auto
  status = auto
  branch = auto
  log = auto

[merge]
  tool = vimdiff
  log = true

[mergetool]
  keepBackup = false

