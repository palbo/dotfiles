escape ^tt

startup_message off
defutf8 on
crlf off
defscrollback 10000
autodetach on
maptimeout 50
silencewait 15
altscreen on
deflogin off
shelltitle "> |zsh"

activity "activity!!1 %C -> %n%f %t"

vbell off
vbell_msg "*beep*"

pow_detach_msg "screen session of \$LOGNAME \$:cr:\$:nl:ended."

bindkey -d "^[k" prev
bindkey -d "^[l" next

hardstatus alwayslastline
hardstatus string "%{= dd}%?%-Lw%?%{= yk} %n*%f %t %{= dd}%?%+Lw%?"

#hardstatus string '%{= wK}%-Lw%{= KW}%50>%n%f %t%{= wK}%+Lw%< %{= kG}%-=%D %c:%s'
#hardstatus string "%{= dd}%?%-Lw%?%{= wk}%n*%f %t%{= dd}%?%+Lw%? %=%c:%s"
#hardstatus string '%{= kG}[%{G}%H%{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{W}%c:%s%{g}]'
#caption string "%{= wk} %?%-Lw%?%{= kd} %n*%f %t %{= wk}%?%+Lw%? %{= wk}%=%{= Wk} %C%a %m-%d-%Y %{= wk}"

termcapinfo xterm* ti@:te@
termcapinfo xterm* ti=E7E[?47l


